<%= form_for([@post, @comment]) do |f| %>

	<% if @comment.errors.any? %>
			<div id="errors">
				<h2><%= pluralize(@comment.errors.count, "error") %> prevented this from saving:</h2>
				<ul>
					<% @comment.errors.full_messages.each do |msg| %>
