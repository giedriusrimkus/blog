<%= form_for @post do |f| %>
	
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= raw f.text_area :body, class: "tinymce" %>
	</p>
	<p>
		<%= f.label :tags, "Tags (separated by commas)" %><br>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>
	<%= tinymce %>